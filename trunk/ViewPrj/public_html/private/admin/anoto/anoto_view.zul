<?xml version="1.0" encoding="UTF-8" ?>
<?script type="text/javascript" src="/js/jquery.meio.mask.js" charset="utf-8" ?>
<zk xmlns="http://www.zkoss.org/2005/zul">
    <div width="100%" height="100%" id="rootParent" apply="br.com.mcampos.controller.anoto.AnotoViewController">
        <borderlayout id="borderLayout">
            <north flex="true" style="background: #D0DEF0">
                <vbox align="center">
                    <label style="font-size:20px;color:#0C7A9A" value="Visualização de PGC"/>
                </vbox>
            </north>
            <center flex="true" autoscroll="true">
                <borderlayout>
                    <west splittable="true" width="50%" autoscroll="true" flex="true">
                        <div align="center" width="100%" height="100%">
                            <!-- Por favor, nao mude o id desta div -->
                            <tabbox>
                                <tabs>
                                    <tab id="tabIcr" label="ICR" />
                                    <tab id="tabPgc" label="Propriedades"/>
                                    <tab id="tabAttach" label="Anexos"/>
                                </tabs>
                                <tabpanels>
                                    <tabpanel>
                                        <div id="divProperties">
                                            <grid width="100%" fixedLayout="true">
                                                <columns>
                                                    <column align="left" width="30%"/>
                                                    <column align="left"/>
                                                </columns>
                                                <rows>
                                                    <row>
                                                        <label value="Campos do Formulário" />
                                                        <combobox id="fields" width="80%"></combobox>
                                                    </row>
                                                    <row id="icrInfo">
                                                        <label value="Reconhecimento" />
                                                        <label id="icrValue" width="80%"/>
                                                    </row>
                                                    <row id="correctedInfo">
                                                        <label value="Correção" />
                                                        <textbox id="correctedValue" width="80%"/>
                                                    </row>
                                                </rows>
                                            </grid>
                                        </div>
                                    </tabpanel>
                                </tabpanels>
                            </tabbox>
                            <separator bar="true" height="10px"/>
                            <div width="100%" align="center">
                                <image id="fieldImage"/>
                            </div>
                        </div>
                    </west>
                    <center autoscroll="true" flex="true">
                        <div>
                            <div align="center" width="100%">
                                <hbox>
                                    <toolbar>
                                        <toolbarbutton id="btnFit" label="Ajustar"
                                                       image="/img/icontexto-webdev-search-016x016.png"/>
                                        <toolbarbutton id="btnZoomIn" label="Mais Zoom"
                                                       image="/img/icontexto-webdev-search-016x016.png"/>
                                        <toolbarbutton id="btnZoomOut" label="Menos Zoom"
                                                       image="/img/icontexto-webdev-alert-016x016.png"/>
                                    </toolbar>
                                </hbox>
                            </div>
                            <imagemap id="pgcImage"></imagemap>
                        </div>
                    </center>
                </borderlayout>
            </center>
        </borderlayout>
    </div>
</zk>