<?xml version="1.0" encoding="UTF-8" ?>
<zk xmlns="http://www.zkoss.org/2005/zul" >
    <div id="rootParent" apply="br.com.mcampos.controller.RegisterController" align="center" width="100%">
        <panel border="normal" title="Registrar" width="500px" > 
            <panelchildren>
                <div align="left" >
                    <grid fixedLayout="false">
                        <columns>
                            <column width="23%" />
                            <column/>
                        </columns>
                        <rows>
                            <row spans="2" align="center">Informe os seus dados para o cadastro b√°sico</row>
                            <row>
                                <label value="Nome completo" />
                                <textbox id="name" width="99%" maxlength="128"/>
                            </row>
                            <row>
                                <label value="E-mail" />
                                <textbox id="email" width="99%" maxlength="128" />
                            </row>
                            <row>
                                <label value="Confirme o email" />
                                <textbox id="re_email" width="99%" maxlength="128" />
                            </row>
                            <row>
                                <label value="CPF"  />        
                                <textbox id="cpf" width="195px" maxlength="14" />
                            </row>
                            <row>
                                <label value="Senha" />
                                <textbox type="password" id="password" width="195px" maxlength="16" />
                            </row>
                            <row>
                                <label value="Confirme a senha" />
                                <textbox type="password" id="repassword" width="195px" maxlength="16" />
                            </row>
                        </rows>
                    </grid>
                </div>
                <separator />
                <div fulfill="=/resources/captcha.zul" >
                </div>        
                <separator />
                <div fulfill="=/resources/submit_cancel.zul" >
                </div>
            </panelchildren>
        </panel>
    </div>
</zk>