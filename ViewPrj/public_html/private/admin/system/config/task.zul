<?xml version="1.0" encoding="UTF-8" ?>
<?script type="text/javascript" src="/js/jquery.meio.mask.js" charset="utf-8" ?>
<zk xmlns="http://www.zkoss.org/2005/zul">
    <div width="100%" height="100%" id="rootParent" apply="br.com.mcampos.controller.admin.system.config.task.TaskController">
        <borderlayout id="borderLayout">
            <north flex="true" style="background: #D0DEF0">
                <vbox align="center">
                    <label style="font-size:20px;color:#0C7A9A" value="Manutenção - Tarefas do Sistema"/>
                </vbox>
            </north>
            <west size="50%" splittable="true" flex="true">
                <borderlayout>
                    <center flex="true" autoscroll="true">
                        <!-- Por favor, nao mude o id deste TreeControl -->
                        <borderlayout>
                            <north title="Lista" size="60%" splittable="true" flex="true">
                                <tree fixedLayout="true" id="treeList" width="100%" height="100%" zclass="z-dottree">
                                    <treecols sizable="true">
                                        <treecol label="Tarefa" width="1"/>
                                    </treecols>
                                    <treechildren id="rootTree"></treechildren>
                                </tree>
                            </north>
                            <south title="Associações" size="40%" splittable="true" flex="true">
                                <tabbox id="associationTab">
                                    <tabs>
                                        <tab label="Menu"/>
                                        <tab label="Permissão"/>
                                        <tab label="Subtarefas"/>
                                    </tabs>
                                    <tabpanels>
                                        <tabpanel>
                                            <listbox fixedLayout="true" id="listMenu">
                                                <listhead sizable="true">
                                                    <listheader id="listHeaderMenu" align="left" label="Descrição" sort="auto"
                                                                width="1"/>
                                                </listhead>
                                            </listbox>
                                        </tabpanel>
                                        <tabpanel>
                                            <listbox fixedLayout="true" id="listPermission">
                                                <listhead sizable="true">
                                                    <listheader id="listHeaderPermision" align="left" label="Descrição" sort="auto"
                                                                width="1"/>
                                                </listhead>
                                            </listbox>
                                        </tabpanel>
                                        <tabpanel>
                                            <listbox fixedLayout="true" id="listSubtask">
                                                <listhead sizable="true">
                                                    <listheader id="listHeadetSubtask" align="left" label="Descrição" sort="auto"
                                                                width="1"/>
                                                </listhead>
                                            </listbox>
                                        </tabpanel>
                                    </tabpanels>
                                </tabbox>
                            </south>
                        </borderlayout>
                    </center>
                </borderlayout>
            </west>
            <center autoscroll="true" flex="true" title="Detalhes do Registro">
                <!-- Por favor, nao mude o id desta div -->
                <div id="recordDetail">
                    <!-- view mode -->
                    <div id="recordView" width="1">
                        <grid width="100%">
                            <columns>
                                <column align="right" width="30%"/>
                                <column align="left"/>
                            </columns>
                            <rows>
                                <row>
                                    Código
                                    <label id="recordId"/>
                                </row>
                                <row>
                                    Descrição
                                    <label id="recordDescription"/>
                                </row>
                                <row>
                                    Tarefa Associada
                                    <label id="recordParent"/>
                                </row>
                            </rows>
                        </grid>
                        <div id="div_crud_buttons" fulfill="=/resources/crud_buttons.zul"></div>
                    </div>
                    <!-- Por favor, nao mude o id desta div -->
                    <div id="recordEdit" visible="false" droppable="true">
                        <grid width="100%" fixedLayout="true">
                            <columns>
                                <column align="right" width="30%"/>
                                <column align="left" width="70%"/>
                            </columns>
                            <rows>
                                <row>
                                    Código
                                    <intbox id="editId" width="100px" constraint="no negative"/>
                                </row>
                                <row>
                                    Descrição
                                    <textbox id="editDescription" width="99%"/>
                                </row>
                                <row>
                                    Tarefa Associada
                                    <intbox id="editParent" width="100px" droppable="true"/>
                                </row>
                            </rows>
                        </grid>
                        <separator/>
                        <div id="div_submit_cancel" fulfill="=/resources/save_cancel.zul"></div>
                    </div>
                </div>
            </center>
        </borderlayout>
    </div>
</zk>